<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pj.burinpc.myprojectend.RegisterActivity">



        <ImageView
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:src="@drawable/banner"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/Linearregis1"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="7dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/banner">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textregis"
            android:textColor="@color/black"
            android:text="สมัครสมาชิก"
            android:textSize="30dp"
            />

        <EditText
            android:id="@+id/regisUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:hint="ชื่อผู้ใช้ :"
            android:textSize="20dp"

            />

        <EditText
            android:id="@+id/regisPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="รหัสผ่าน :"
            android:inputType="textPassword"
            android:textSize="20dp"

            />

        <EditText
            android:id="@+id/regisConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="ยืนยันรหัสผ่าน :"
            android:textSize="20dp"

            />

        <EditText
            android:id="@+id/regisName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="ชื่อ - นามสกุล :"
            android:textSize="20dp"

            />

        <EditText
            android:id="@+id/regisTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="เบอร์โทรศัพท์ :"
            android:textSize="20dp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linearregis2"
        android:orientation="horizontal"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Linearregis1"
        >

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:onClick="clickRegister"
            android:text="ยืนยันการสมัคร" />

        <Button
            android:id="@+id/btnCancelRegis"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.08"
            android:layout_marginTop="10dp"
            android:onClick="clickCancelRegister"
            android:text="ยกเลิก" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
